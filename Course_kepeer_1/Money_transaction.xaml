<Page x:Class="Course_kepeer_1.Money_transaction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course_kepeer_1"
      mc:Ignorable="d" 
      MinHeight="534" MinWidth="726"
      Title="Money_transaction">

    <Grid>
        <ListView x:Name="listView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Before operation" DisplayMemberBinding="{Binding before}"/>
                    <GridViewColumn Width="150" Header="After operation" DisplayMemberBinding="{Binding after}"/>
                    <GridViewColumn Width="190" Header="Resource" DisplayMemberBinding="{Binding resourc}"/>
                    <GridViewColumn Width="190" Header="date" DisplayMemberBinding="{Binding date}"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
